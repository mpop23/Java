<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ip.histospot.android.fragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/colorPrimary">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="0dp"
                android:background="#00000000"
                android:drawableLeft="@drawable/ic_person_add_white_32dp_1x"
                android:layout_marginRight="16dp"
                android:id="@+id/button2" />

            <ImageButton
                android:id="@+id/searchB"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="17dp"
                android:layout_toLeftOf="@+id/button2"
                android:layout_toStartOf="@+id/button2"
                android:background="#8d6e63"
                android:src="@drawable/ic_search_black_24dp" />
        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/poza_profil"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/default_profile"
            app:civ_border_color="@color/colorSecondary"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/nume_utilizator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Nume"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/prenume_utilizator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Prenume"
            android:layout_marginTop="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp">
                <ImageView
                    android:id="@+id/level_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/circle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textSize="32sp"
                    android:text="5"
                    android:textColor="@color/colorTextOnSecondary"
                    android:textAlignment="center"/>
            </RelativeLayout>
            <ProgressBar
                android:id="@+id/level_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:progress="40"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="10dp"
                android:progressDrawable="@drawable/level_bar"
                android:layout_toRightOf="@+id/level"
                android:layout_alignParentTop="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/level"
                android:layout_below="@+id/level_bar"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="10dp"
                android:text="100 / 500 points"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
